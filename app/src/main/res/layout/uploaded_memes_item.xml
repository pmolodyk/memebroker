<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/UploadedMemesItemLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground">
        <TextView
            android:id="@+id/UploadedMemesItemNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/fui_progress_dialog_loading"
            android:textSize="18sp"
            android:textColor="@color/Black"/>
        <ImageView
            android:id="@+id/UploadedMemesItemImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Grey"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>
        <TextView
            android:id="@+id/UploadedMemesItemPriceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/fui_progress_dialog_loading"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/Black"/>
    </LinearLayout>
</android.support.v7.widget.CardView>