<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/assetsItemLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/assetsTotalExpensesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/fui_progress_dialog_loading"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/possibleReceiptsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/fui_progress_dialog_loading"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/assetsItemImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>
        <TextView
            android:id="@+id/possibleIncomeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/fui_progress_dialog_loading"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.v7.widget.CardView>