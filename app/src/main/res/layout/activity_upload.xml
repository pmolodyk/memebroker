<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".UploadActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/upload_activity_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="@string/upload_title"/>

        </android.support.design.widget.AppBarLayout>
        <LinearLayout
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".UploadActivity"
            android:background="@color/LightGrey">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/warningScaleImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:text="@string/warningBan"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:background="@drawable/custom_border_red" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">
                <ImageView
                    android:id="@+id/uploadedImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="4"
                    app:srcCompat="@drawable/ic_menu_gallery" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8.5"
                android:layout_margin="5dp">
                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/upload_meme_lang_choose_spinner"
                    android:maxLines="4"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8.5"
                android:layout_margin="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="?android:attr/selectableItemBackground"
                            android:onClick="uploadImage">
                            <Button
                                android:id="@+id/UploadButton"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@color/fui_transparent"
                                android:drawableLeft="@drawable/ic_attach"
                                android:drawableStart="@drawable/ic_attach"
                                android:text="@string/select_image"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:layout_gravity="center"
                                android:clickable="false"
                                android:focusable="false"
                                android:textAllCaps="false"/>
                        </LinearLayout>
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/DarkGrey" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="?android:attr/selectableItemBackground"
                            android:onClick="rotateBitmap">
                            <Button
                                android:id="@+id/rotate"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@color/fui_transparent"
                                android:drawableLeft="@drawable/ic_rotate_right"
                                android:drawableStart="@drawable/ic_rotate_right"
                                android:gravity="center"
                                android:clickable="false"
                                android:focusable="false"
                                android:text="@string/rotate_image"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:textAllCaps="false"/>
                        </LinearLayout>
                    </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</android.support.v4.widget.DrawerLayout>