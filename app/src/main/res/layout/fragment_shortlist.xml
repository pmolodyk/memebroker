<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BasicBackground"
    tools:context="com.jattilainen.memebroker.ShortList.ShortlistFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shortlistRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:visibility="invisible"
        android:id="@+id/emptyShortlistTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/empty_shortlist"/>
</FrameLayout>
